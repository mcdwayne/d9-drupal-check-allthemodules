<?php

/**
 * @file
 * Contains custom_configuration.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function custom_configuration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the custom_configuration module.
    case 'help.page.custom_configuration':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This will provide you a way to store multiple configuration') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function custom_configuration_page_attachments(array &$page) {
  $routeName = \Drupal::routeMatch()->getRouteName();
  if ($routeName == 'custom_configuration.custom_configuration_add') {
    $page['#attached']['library'][] = 'custom_configuration/custom_config_add';
  }
}
