/**
 * Helper function to get the current pager infos.
 *
 * @param int $element
 *   The pager id (default to 0).
 *
 * @return array
 *   An array representing the pager infos.
 */
function entity_list_get_pager_infos($element = 0) {
  global $pager_page_array, $pager_total_items, $pager_limits, $pager_total;
  $infos = [
    'nb_pages' => (int) $pager_total[$element],
  ];

  $infos['total'] = $total = $pager_total_items[$element];
  // Pages start at 0 so add 1.
  $infos['current_page'] = $current_page = $pager_page_array[$element] + 1;
  $last_page = intval($pager_total[$element]);
  $limit = $pager_limits[$element];
  $infos['start'] = $limit * ($current_page - 1) + 1;

  // Only one page.
  if ($last_page == 1) {
    $infos['start'] = 1;
    $infos['end'] = $total;
  }
  // More than one page.
  else {
    // Last page.
    if ($current_page == $last_page) {
      $max = $limit * $last_page;
      $offset = $max - $total;
      $infos['end'] = ($limit - $offset) + $limit * ($current_page - 1);
    }
    // First page.
    elseif ($current_page == 1) {
      $infos['start'] = 1;
      $infos['end'] = $limit;
    }
    // Any middle page.
    else {
      $infos['end'] = $current_page * $limit;
    }
  }
  return $infos;
}
