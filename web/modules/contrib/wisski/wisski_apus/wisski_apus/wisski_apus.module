use Drupal\Core\Url;

/**
 * Implementation of Hook_help
 */
function wisski_apus_help($route_name, \Drupal\Core\Routing\RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.wisski_apus':
      return '<p>' . t('This is a module for text analysis with WissKI.') . '</p>';
  }
}


