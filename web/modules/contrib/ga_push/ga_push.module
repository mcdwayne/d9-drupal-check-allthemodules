 *
 * @see https://developers.google.com/analytics/devguides/collection/protocol/v1/parameters
 */
function ga_push_analyticsjs_measurement_protocol_map() {
  return [
    // Application:
    'appName'         => 'an',
    'appId'           => 'aid',
    'appVersion'      => 'av',
    'appInstallerId'  => 'aiid',
    // Ecommerce:
    'id'              => 'ti',
    'affiliation'     => 'ta',
    'revenue'         => 'tr',
    'tax'             => 'tt',
    'shipping'        => 'ts',
    'currency'        => 'cu',
    'name'            => 'in',
    'price'           => 'ip',
    'quantity'        => 'iq',
    'sku'             => 'ic',
    'category'        => 'iv',
    // Event:
    'eventCategory'   => 'ec',
    'eventAction'     => 'ea',
    'eventLabel'      => 'el',
    'eventValue'      => 'ev',
    'nonInteraction'  => 'ni',
    // Exception:
    'exDescription'      => 'exd',
    'exFatal'            => 'exf',
    // Pageview:
    'location'        => 'dh',
