  }
  // Implements Honeypot form.
  if ($login_extra_honeypot != 0) {
    $login_extra_honeypot_field = $spammaster_settings_protection->get('spammaster.extra_honeypot_login');
    if ($login_extra_honeypot_field != 0) {
