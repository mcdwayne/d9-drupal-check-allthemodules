    isset($response['AuthorizationToken']->Token)) {
    $token = $response['AuthorizationToken']->Token;
  }
  $array['Result'] = array();
  $header = new SoapHeader($getResult, "AuthorizationToken", array["Token" => $token]);
  $result2 = $client->__soapCall("GetCustomerByEmail", array[
