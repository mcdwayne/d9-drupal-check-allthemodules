/**
 * Implements hook_theme().
 */
function feadmin_theme($existing, $type, $theme, $path) {
  $items['feadmin_block_toolbar'] = array(
    'render element' => 'elements',
  );
  return $items;
}

/**
 * Implements hook_page_top().
 *
 * Add FEA Toolbar to the top of the page.
 */
function feadmin_page_top(array &$page_top) {
  if (_feadmin_is_adminpage() || !\Drupal::currentUser()
      ->hasPermission('use feadmin')
  ) {
    return;
  }
  $page_top['page_top']['feadmin_toolbar'] = array(
    '#type' => 'feadmin_toolbar',
    '#cache' => array(
      'keys' => array('feadmin_toolbar'),
      'contexts' => array('user.permissions'),
    ),
  );
}

/**
 * Implements hook_toolbar().
 */
function feadmin_toolbar() {
  $items = array();
  $items['feadmin'] = array(
    '#cache' => array(
      'contexts' => array(
        'user.permissions',
      ),
    ),
  );

  if (_feadmin_is_adminpage() || !\Drupal::currentUser()
      ->hasPermission('use feadmin')
  ) {
    return $items;
  }

  $items['feadmin'] += array(
    '#type' => 'toolbar_item',
    'tab' => array(
      '#type' => 'html_tag',
      '#tag' => 'button',
      '#value' => t('Administer this page'),
      '#attributes' => array(
        'title' => t('Administer this page'),
        'class' => array(
          'toolbar-icon',
          'toolbar-icon-system-admin-config',
          'js-feadmin-toogle'
        ),
        'role' => 'button',
        'aria-pressed' => 'false',
      ),
    ),
    '#wrapper_attributes' => array(
      'class' => array('feadmin-toolbar-tab'),
    ),
    '#attached' => array(
      'library' => array(
        'feadmin/feadmin.toolbar',
      ),
    ),
  );

  return $items;
}

