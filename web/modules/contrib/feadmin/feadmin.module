/**
 * Check if the current page is and admin page.
 * @return true/false
 */
function _feadmin_is_adminpage() {
  $route = \Drupal::routeMatch()->getRouteObject();
  $is_admin = \Drupal::service('router.admin_context')->isAdminRoute($route);
  return $is_admin;
}