<?php

use Drupal\Core\Template\Attribute;
use Drupal\masonry_view_style\Plugin\views\style\Masonry;

/*
 * from template_preprocess_views_view_unformatted.
 */
function template_preprocess_views_view_masonryvs(&$variables) {
  $view = $variables['view'];
  $rows = $variables['rows'];
  $style = $view->style_plugin;
  $options = $style->options;

  foreach ($rows as $id => $row) {
    $variables['rows'][$id] = array();
    $variables['rows'][$id]['content'] = $row;
    $variables['rows'][$id]['attributes'] = new Attribute();
  }
}

/**
 * Implements hook_preprocess_views_view().
 */
function masonry_view_style_preprocess_views_view(&$variables) {
  $view = $variables['view'];
  $style = $view->style_plugin;

  if ($style instanceof Masonry && !empty($variables['rows'])) {
    $variables['rows']['#theme_wrappers'] = ['container'];
    $variables['rows']['#attributes']['class'][] = 'mvs-grid';
  }
}
