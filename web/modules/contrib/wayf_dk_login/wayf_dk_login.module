 */
function wayf_dk_login_help($route_name, \Drupal\Core\Routing\RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'admin/help#wayf_dk_login':
      $output = '<p>' . t('Implements WAYF.dk login.') . '</p>';
