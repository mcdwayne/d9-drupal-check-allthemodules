/**
 * Implements hook_form_alter().
 */
function migrate_recurring_import_form_migration_edit_form_alter(&$form, FormStateInterface $form_state) {
  // dsm('in');
  $migration = $form_state->getFormObject()->getEntity();
  $times = [900, 1800, 3600, 10800, 21600, 43200, 86400, 259200, 604800, 2419200];

  $period = array_map(function($time) {
    return \Drupal::service('date.formatter')->formatInterval($time);
  }, array_combine($times, $times));

  foreach ($period as &$p) {
    $p = t('Every @p', ['@p' => $p]);
  }
  
  $period = [
    0 => t('Never')
  ] + $period;
  
  $form['interval'] = array(
    '#type' => 'select',
    '#title' => t('Run on'),
    '#description' => t('Choose how often a migration should be run.'),
    '#default_value' => $migration->getThirdPartySetting('migrate_recurring_import', 'interval'),
    '#weight' => 10,
    '#options' => $period
  );
 
  $form['#entity_builders'][] = 'migrate_recurring_import_form_migration_edit_form_builder';
}

/**
 * Entity builder for the menu configuration entity.
 */
function migrate_recurring_import_form_migration_edit_form_builder($entity_type, Migration $migration, &$form, FormStateInterface $form_state) {
  if ($form_state->getValue('interval')) {
    $migration->setThirdPartySetting('migrate_recurring_import', 'interval', $form_state->getValue('interval'));
    return;
  }
 
  $migration->unsetThirdPartySetting('migrate_recurring_import', 'interval');
}

