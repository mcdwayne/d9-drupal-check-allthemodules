  $form['extlink_alert_text']['#format'] = $alert_text['format'];

  $form['extlink_alert_text_fieldset']['token_tree'] = [
    '#theme' => 'token_tree_link',
    '#global_types' => TRUE,
    '#click_insert' => TRUE,
    '#weight' => 20,
    '#token_types' => ['extlink'],
  ];

