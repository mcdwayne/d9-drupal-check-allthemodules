<?php

/*
 * @file
 * Provides a Modal Block Custom block Type
 */

/**
 * Implements hook_theme().
 */

function modal_blocks_theme() {
  return array(
    'modal_block_formatter' => array(
      'variables' => array(
        'block' => NULL,
        'frequency' => NULL,
        'period' => NULL,
      ),
    ),
  );
}

/** * Implements hook_page_attachments().
 */
function modal_blocks_page_attachments(array &$attachments) {
  $attachments['#attached']['library'][] = 'modal_blocks/modal_block';
}