<?php

/**
 * @file
 * Provides Hover Card for all user links with "username" as their class.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function hover_card_help($route_name, RouteMatchInterface $route_match) {
  global $base_url;
  switch ($route_name) {
    case 'help.page.hover_card':
      $output = '';
      $output .= '<p>' . t('Hovercard is a module which is based on <a href="@hovercard">hovercard</a> which is a free light weight jQuery plugin that enables you to display related information with the hovered label, link, or any html element of your choice. This module extends Drupal to provide Hovercard for the users of the website.', ['@hovercard' => 'http://designwithpc.com/Plugins/Hovercard']) . '</p>';
      $output .= '<h6>' . t('Dependencies') . '</h6>';
      $output .= '<ul>';
      $output .= t('<li><a href="@libraries">Libraries API</a></li>', ['@libraries' => 'https://drupal.org/project/libraries']);
      $output .= '</ul>';
      $output .= '<h6>' . t('Installation') . '</h6>';
      $output .= '<p>' . t('The Hover Card module is very similar to other Drupal modules which requires Libraries Module to use for the 3rd party code integration. Hence, for installation of the Hover Card module please follow the below mentioned steps:') . '</p>';
      $output .= '<ol>';
      $output .= '<li>' . t('Install as usual, see <a href="@1897420">https://www.drupal.org/node/1897420</a> for further information.', ['@1897420' => 'https://www.drupal.org/node/1897420']) . '</li>';
      $output .= '<li>' . t('Download and install the Libraries Module and after the module installation create a new folder called <code>libraries</code> under your Drupal installation directory. (Creating this folder will help us to locate our 3rd party code integration.)') . '</li>';
      $output .= '<li>' . t('Download the compressed version of jQuery <a href="@github">Hovercard Plugin</a> and extract the files into <code>/libraries/hover_card/</code>. Finally, the path of the <code>jquery.hovercard.min.js</code> should look like this <code>(your-drupal-directory)/libraries/hover_card/jquery.hovercard.min.js</code>', ['@github' => 'https://raw.githubusercontent.com/prashantchaudhary/hovercard/master/jquery.hovercard.min.js']) . '</li>';
      $output .= '<li>' . t('Now, in your <code>/modules/contrib/</code> directory, download the <a href="@project_page">Hover Card</a> module.', ['@project_page' => 'https://www.drupal.org/project/hover_card']) . '</li>';
      $output .= '<li>' . t('Enable the Hover Card module.') . '</li>';
      $output .= '</ol>';
      $output .= '<h6>' . t('Configuration') . '</h6>';
      $output .= '<ul>';
      $output .= '<li>' . t('After enabling it please check your <a href="@status">Status Report</a> where there should be a new option showing <code><strong>HOVER CARD LIBRARY</strong> Installed</code>.', ['@status' => $base_url . '/admin/reports/status']) . '</li>';
      $output .= '<li>' . t('This module has menu or modifiable settings. There is configuration link for this which you can access at <a href="@hover_card">Hover Card Settings</a>. When enabled and configured properly, this module will display the hover card to the user links with <code>username</code> as class to their anchor tags. To disable the hover card from user links, uninstall the module and clear caches.', ['@hover_card' => $base_url . '/admin/config/people/hover-card']) . '</li>';
      $output .= '</ul>';

      return $output;
  }
}

/**
 * Implements hook_page_attachments().
 */
function hover_card_page_attachments(array &$page) {
  $page['#attached']['library'][] = 'hover_card/hover_card';
  $page['#attached']['drupalSettings']['module_path'] = drupal_get_path('module', 'hover_card');
}

/**
 * Implements hook_theme().
 *
 * This will render some basic output for this module.
 */
function hover_card_theme($existing, $type, $theme, $path) {
  return [
    'hover_card_template' => [
      'variables' => ['details' => NULL],
      'template' => 'hover-card',
    ],
  ];
}
