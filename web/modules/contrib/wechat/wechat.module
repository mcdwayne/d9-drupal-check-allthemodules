        drupal_mkdir($image_dir, 0777, TRUE);
      }	
	  $iamge_name = $image_dir . '/' . $request_message->msg_id->value . '.jpg';
	  $file = file_save_data($image, $iamge_name);
	  $request_message->field_image = $file;
    }
	
  }
  elseif ($xml_obj->MsgType == 'voice') {

