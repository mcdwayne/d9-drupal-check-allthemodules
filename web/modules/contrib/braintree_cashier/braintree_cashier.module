      $output .= '<p>' . t('Recurring billing managed by Braintree.') . '</p>';
      $output .= '<p>' . t('Please refer to the <a href="@docs">documentation handbook</a> on Drupal.org.',
          ['@docs' => 'https://www.drupal.org/docs/8/modules/braintree-cashier']);
