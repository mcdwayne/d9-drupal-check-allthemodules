<?php

/**
 * @file
 * csv_to_config module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function csv_to_config_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'csv_to_config.csv_import.step1':
      $output = '';
      $output .= '<p>' . t('Select a CSV file to be uploaded.') . '</p>';
      $output .= '<p>' . t('Visit the <a href=":url">help page</a> for more explanation about the CSV format.', array(':url' => Url::fromRoute('help.page', array('name' => 'csv_to_config'))->toString())) . '</p>';
      return $output;
      break;

    case 'help.page.csv_to_config':
      $filepath = dirname(__FILE__) . '/README.txt';
      $readme = file_get_contents($filepath);
      $output = '<pre>' . $readme . '</pre>';
      return $output;
      break;

    default:
  }
}
